<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/etDescripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DescripciÃ³n"
        android:inputType="text" />

    <EditText
        android:id="@+id/etPeriodista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Periodista"
        android:inputType="text"
        android:layout_below="@id/etDescripcion"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/etFecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha"
        android:inputType="none"
        android:focusable="false"
        android:clickable="false"
        android:layout_below="@id/etPeriodista"
        android:layout_marginTop="16dp" />

    <ImageView
        android:id="@+id/ivImagen"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@id/etFecha"
        android:layout_marginTop="16dp"
        android:background="#ccc"
        android:contentDescription="Imagen seleccionada"
        android:scaleType="centerCrop"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnSeleccionarImagen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar Imagen"
        android:layout_below="@id/ivImagen"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true" />

    <!-- Alinear Grabar Audio a la izquierda -->
    <Button
        android:id="@+id/btnGrabarAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Grabar Audio"
        android:layout_below="@id/btnSeleccionarImagen"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true" />

    <!-- Alinear Seleccionar Audio a la derecha -->
    <Button
        android:id="@+id/btnSeleccionarAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccionar Audio"
        android:layout_below="@id/btnSeleccionarImagen"
        android:layout_marginTop="8dp"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvAudioSeleccionado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSeleccionarAudio"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnGuardarEntrevista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Entrevista"
        android:layout_below="@id/tvAudioSeleccionado"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btnVerEntrevistas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ver Entrevistas"
        android:layout_below="@id/btnGuardarEntrevista"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>


</RelativeLayout>
